<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/wrath_settings_title" >

<!-- Buttons -->
<com.wrath.settings.preferences.CardviewPreference
    android:key="lockscreen_category"
    android:icon="@drawable/ic_buttons"
    android:title="@string/buttons"
    android:summary="@string/buttons_summary"
    android:fragment="com.wrath.settings.fragments.buttons"/>

<!-- Status Bar -->
<com.wrath.settings.preferences.CardviewPreference
    android:key="status_bar"
    android:icon="@drawable/ic_status_bar"
    android:title="@string/status_bar"
    android:summary="@string/status_bar_summary"
    android:fragment="com.wrath.settings.fragments.StatusBar"/>

<!-- Quick Settings panel -->
<com.wrath.settings.preferences.CardviewPreference
    android:key="quick_settings"
    android:icon="@drawable/ic_quick_settings"
    android:title="@string/quick_settings"
    android:summary="@string/quick_settings_summary"
    android:fragment="com.wrath.settings.fragments.QuickSettings"/>

<!-- Lock Screen -->
<com.wrath.settings.preferences.CardviewPreference
    android:key="lockscreen_category"
    android:icon="@drawable/ic_lockscreen"
    android:title="@string/lockscreen"
    android:summary="@string/lockscreen_summary"
    android:fragment="com.wrath.settings.fragments.Lockscreen"/>

<!-- Miscellaneous -->
<com.wrath.settings.preferences.CardviewPreference
    android:key="miscellaneous_category"
    android:icon="@drawable/ic_miscellaneous_category"
    android:title="@string/miscellaneous_category"
    android:summary="@string/miscellaneous_category_summary"
    android:fragment="com.wrath.settings.categories.Miscellaneous"/>

</PreferenceScreen>
